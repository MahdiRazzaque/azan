                        this.updateProgress(100, 'Setup complete!');
                        
                        // Reload the page after a short delay
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    }
                } catch (error) {
                    console.error('Error checking prayer status:', error);
                }
            }, 2000);
            
