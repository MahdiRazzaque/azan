                    if (retryCount > maxRetries) {
                        clearInterval(statusCheckInterval);
                        this.updateProgress(100, 'Setup complete, but prayer times may need to be refreshed');
                        // Reload the page after a short delay
                        setTimeout(() => {
                            window.location.reload();
