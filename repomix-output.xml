  });

  // Update prayer settings
  app.post('/api/config/prayer-settings', requireAuth, async (req, res) => {
    try {
      const prayerSettings = req.body;
      const updatedConfig = await updateConfig('prayerSettings', prayerSettings);
      
      res.json({ 
